<th class="ltx_td ltx_align_center ltx_th ltx_th_column ltx_th_row ltx_border_tt" id="S6.T3.6.6.6"><span class="ltx_inline-logical-block ltx_align_top" id="S6.T3.6.6.6.1">
<span class="ltx_para ltx_noindent" id="S6.T3.6.6.6.1.p1">
<span class="ltx_p" id="S6.T3.6.6.6.1.p1.1"><span class="ltx_text" id="S6.T3.6.6.6.1.p1.1.1"></span> <span class="ltx_text" id="S6.T3.6.6.6.1.p1.1.2">
<span class="ltx_tabular ltx_align_middle" id="S6.T3.6.6.6.1.p1.1.2.1">
<span class="ltx_tr" id="S6.T3.6.6.6.1.p1.1.2.1.1">
<span class="ltx_td ltx_nopad_r ltx_align_center" id="S6.T3.6.6.6.1.p1.1.2.1.1.1"><span class="ltx_text" id="S6.T3.6.6.6.1.p1.1.2.1.1.1.1" style="font-size:80%;">Information</span></span></span>
<span class="ltx_tr" id="S6.T3.6.6.6.1.p1.1.2.1.2">
<span class="ltx_td ltx_nopad_r ltx_align_center" id="S6.T3.6.6.6.1.p1.1.2.1.2.1"><span class="ltx_text" id="S6.T3.6.6.6.1.p1.1.2.1.2.1.1" style="font-size:80%;">Integration</span></span></span>
</span></span><span class="ltx_text" id="S6.T3.6.6.6.1.p1.1.3"></span></span>
</span></span></th>
<th class="ltx_td ltx_nopad_r ltx_align_center ltx_th ltx_th_column ltx_th_row ltx_border_tt" id="S6.T3.7.7.7"><span class="ltx_inline-logical-block ltx_align_top" id="S6.T3.7.7.7.1">
